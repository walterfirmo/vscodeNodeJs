<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
    </head>
    <body>
        <h1><%= title %></h1>
        <p>Preencha os campos abaixo para cadastrar um cliente.</p>
    </body>
    <form action="/new" method="POST">
        <fieldset>
            <legend>Dados Cadastrais</legend>
            <p>
                Nome: 
                <input type="text" name="nome" value="<%= customer.nome %>" />
            </p>
            <p>
                Idade: <input type="number" name="idade" value="<%= customer.idade %>" />
            </p>
            <p>
                Regiao: <input type="text" name="cidade" value="<%= customer.cidade %>" />
                <select id="uf" name="uf" value="<%= customer.uf %>" >
                    <option>Selecione a UF:</option>
                    <option>RS</option>
                    <option>SP</option>
                    <option>SC</option>
                    <option>PR</option>
                </select>
            </p>
            <input type="hidden" name="id" value="<%= customer._id %>" />
            <P>
                <input type="submit" value="Salvar" />
                <a href="/">Cancelar</a>
            </P>
        </fieldset>
    </form>
    <script>
        if(window.location.search){
            const error = window.location.search.split("=")[1];
            alert(decodeURI(error));
        }

        <%
            if(customer.uf){
                %>
                document.getElementById("uf").value = "<%= customer.uf %>";
                <%

            }
        %>
    </script>
</html>